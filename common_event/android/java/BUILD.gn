import("//build/ohos.gni")

java_library("common_event_android_java") {
  java_files = [ "src/ohos/ace/plugin/broadcastplugin/BroadcastPlugin.java" ]
  subsystem_name = "plugins"
  part_name = "common_event"
}

ohos_combine_jars("common_event_java") {
  deps = [ ":common_event_android_java" ]

  subsystem_name = "plugins"
  part_name = "common_event"
  jar_path = "${root_out_dir}/plugins/common_event/ace_common_event_android.jar"
}

ohos_source_set("common_event_anroid_jni") {
  sources = [
    "jni/broadcast_jni.cpp",
    "jni/common_event_impl.cpp",
    "jni/common_event_receiver.cpp",
  ]

  defines = [ "ANDROID_PLATFORM" ]

  deps = [
    ":common_event_java",
    "//plugins/interfaces/native:ace_plugin_util_android",
  ]

  subsystem_name = "plugins"
  part_name = "common_event"
}
