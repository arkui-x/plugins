    "java/jni/location_crossplatform_service_impl.cpp",
    "java/jni/location_service_jni.cpp",
  ]

  defines = [
    "ANDROID_PLATFORM",
    "NOTIFICATION_ENABLE"
  ]

  deps = [
    ":geolocationmanager_java",
    "//plugins/interfaces/native:ace_plugin_util_android",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog_android",
