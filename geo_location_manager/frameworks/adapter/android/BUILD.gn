import("//build/ohos.gni")
import("//plugins/geo_location_manager/geolocationmanager.gni")

java_library("geolocationmanager_android_java") {
  java_files =
      [ "java/src/ohos/ace/plugin/locationserviceplugin/LocationService.java" ]
  subsystem_name = "plugins"
  part_name = "geo_location_manager"
}

ohos_combine_jars("geolocationmanager_java") {
  deps = [ ":geolocationmanager_android_java" ]
  subsystem_name = "plugins"
  part_name = "geo_location_manager"
  jar_path = "${root_out_dir}/plugins/geo_location_manager/frameworks/adapter/arkui_geolocationmanager_service.jar"
}

