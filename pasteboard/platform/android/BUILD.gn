import("//build/ohos.gni")
import("//foundation/appframework/ability/ability_runtime/ability_runtime.gni")

java_library("pasteboard_android_java") {
  java_files = [
    "java/src/ohos/ace/plugin/clipboard/ClipboardAosp.java",
    "java/src/ohos/ace/plugin/clipboard/DataRecordDTO.java",
    "java/src/ohos/ace/plugin/clipboard/PasteboardConstants.java",
    "java/src/ohos/ace/plugin/clipboard/PasteDataDTO.java",
    "java/src/ohos/ace/plugin/clipboard/PatternDetection.java",
    "java/src/ohos/ace/plugin/clipboard/PropertyDTO.java",
    "java/src/ohos/ace/plugin/clipboard/WantParamsUtils.java",
  ]
  subsystem_name = "plugins"
  part_name = "pasteboard"
}

ohos_combine_jars("pasteboard_java") {
  deps = [ ":pasteboard_android_java" ]

  subsystem_name = "plugins"
  part_name = "pasteboard"
  jar_path = "${root_out_dir}/plugins/pasteboard/ace_pasteboard_android.jar"
}

ohos_source_set("pasteboard_android_jni") {
  sources = [
    "//plugins/pasteboard/platform/clipboard_proxy.cpp",
    "clipboard_proxy_impl.cpp",
    "java/jni/clipboard_jni.cpp",
  ]

  defines = [ "ANDROID_PLATFORM" ]

  deps = [
    ":pasteboard_java",
    "${ability_runtime_cross_platform_path}/interfaces/inner_api/want:cross_platform_want_params",
    "//foundation/arkui/ace_engine/adapter/android/build:libarkui_android",
    "//plugins/interfaces/native:ace_plugin_util_android",
    "//plugins/pasteboard/framework/innerkits:arkui_x_pasteboard_data",
  ]

  include_dirs = [
    "//foundation/arkui/ace_engine/",
    "//foundation/arkui/ace_engine/frameworks",
    "//foundation/arkui/ace_engine/interfaces/inner_api/ace_kit/include",
    "//foundation/distributeddatamgr/udmf/interfaces/innerkits/common",
    "//foundation/distributeddatamgr/udmf/interfaces/innerkits/client",
    "//plugins/pasteboard/framework/innerkits/include",
    "//plugins/pasteboard/platform/android/java/jni",
    "//plugins/pasteboard/platform/android",
    "//plugins/pasteboard/platform",
    "//plugins/interfaces/native",
  ]

  subsystem_name = "plugins"
  part_name = "pasteboard"
}
