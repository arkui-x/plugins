import("//build/ohos.gni")
import("//plugins/multimedia/audio/audio.gni")

ohos_source_set("audio_renderer_ios") {
  include_dirs = plugins_audio_utils_include
  include_dirs += plugins_audio_include
  include_dirs += [
    ".",
    "..",
  ]

  sources = [
    "audio_renderer.mm",
    "audio_renderer_impl.mm",
  ]

  defines = [ "IOS_PLATFORM" ]

  if (target_cpu == "arm64") {
    defines += [ "_ARM64_" ]
  }

  configs = [ "$ace_root:ace_config" ]

  cflags_objc = [
    "-fvisibility=default",
    "-fobjc-weak",
  ]

  cflags_objcc = cflags_objc
  deps = [
    "//plugins/interfaces/native:plugin_log",
    "//plugins/libs/napi:napi_ios",
  ]

  frameworks = [
    "SystemConfiguration.framework",
    "AudioToolbox.framework",
  ]

  subsystem_name = "plugins"
  part_name = "multimedia_audio_audiorenderer"
}
