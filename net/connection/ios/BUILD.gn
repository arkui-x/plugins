import("//build/ohos.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")

ohos_source_set("net_connection_ios") {
  include_dirs = [
    "//foundation/communication/netmanager_base",
    "//foundation/graphic/graphic_2d/rosen/modules/platform/ipc_core",
    "//foundation/graphic/graphic_2d/rosen/modules/platform/utils",
    "//foundation/graphic/graphic_2d/rosen/modules/2d_graphics/include/utils",
    "//foundation/communication/netmanager_base/interfaces/innerkits/netconnclient/include",
    "//foundation/communication/netmanager_base/interfaces/innerkits/include",
    "//foundation/communication/netmanager_base/utils/napi_utils/include",
    "//foundation/communication/netmanager_base/interfaces/innerkits/netconnclient/include/proxy",
    "//foundation/communication/netmanager_base/frameworks/js/napi/connection/observer/include",
    "//foundation/communication/netmanager_base/interfaces/innerkits/netpolicyclient/include",
  ]

  sources = [
    "net_conn_client.mm",
    "net_conn_client_adapter.mm",
    "net_status_listen.mm",
    "net_status_observer.m",
  ]

  defines = [ "IOS_PLATFORM" ]

  if (target_cpu == "arm64") {
    defines += [ "_ARM64_" ]
  }

  configs = [ "$ace_root:ace_config" ]

  cflags_objc = [
    "-fvisibility=default",
    "-fobjc-weak",
  ]

  cflags_objcc = cflags_objc
  deps = [
    "//plugins/interfaces/native:plugin_log",
    "//plugins/libs/napi:napi_ios",
  ]

  frameworks = [ "SystemConfiguration.framework" ]

  subsystem_name = "plugins"
  part_name = "net_connection"
}
