import("//build/ohos.gni")

config("libcertificate_framework_ability_config") {
  include_dirs = [
    "//base/security/certificate_framework/frameworks/ability/inc",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//third_party/bounds_checking_function/include",
  ]
}

ohos_source_set("libcertificate_framework_ability") {
  branch_protector_ret = "pac_ret"
  subsystem_name = "plugins"
  part_name = "security_cert"
  public_configs = [ ":libcertificate_framework_ability_config" ]
  configs = [ "../../config/build:coverage_flag" ]
  include_dirs = [
    "//base/security/certificate_framework/frameworks/core/cert/include",
    "//base/security/certificate_framework/frameworks/core/extension/include",
  ]
  sources = [
    "//base/security/certificate_framework/frameworks/ability/src/cf_ability.c",
  ]

  cflags = [
    "-DHILOG_ENABLE",
    "-fPIC",
    "-Wall",
  ]

  deps = [
    "../common:libcertificate_framework_common_static",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits:libhilog_${target_os}",
    "//plugins/libs/securec:sec_${target_os}",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}
